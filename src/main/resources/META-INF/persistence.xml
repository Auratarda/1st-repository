<persistence xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">
    <persistence-unit name="OperatorSystem" transaction-type="RESOURCE_LOCAL">
        <class>com.tsystems.javaschool.entities.Client</class>
        <class>com.tsystems.javaschool.entities.Contract</class>
        <class>com.tsystems.javaschool.entities.Option</class>
        <class>com.tsystems.javaschool.entities.Tariff</class>
        <properties>
            <property name="javax.persistence.jdbc.Driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/mobile_operator"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
        </properties>
    </persistence-unit>
    </persistence>